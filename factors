#!/usr/bin/python3
""" Author : Evans Adu """

""" Factorize given set of numbers in a file to product of two small numbers """
from sys import argv

def factorize(num):
    """ Find two small numbers that multiply to give a given number """
    if num < 2:
        return

    for i in range(2, num + 1):
        if num % i == 0:
            factor1 = i
            factor2 = num // i
            print(f"{num}={factor1}*{factor2}")
            return  # Exit after finding the first factorization

if __name__ == "__main__":
    if len(argv) != 2:
        print("Usage: factors <file>")
        exit()

    try:
        with open(argv[1]) as file:
            for line in file:
                number_to_check = int(line.strip())  # Remove whitespace/newline
                factorize(number_to_check)
    except FileNotFoundError:
        print("File not found.")
    except ValueError:
        print("Invalid number in file.")
    except Exception as e:
        print(f"An error occurred: {e}")
